<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_hide"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        >

        <LinearLayout
            android:id="@+id/ll_back"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:background="@drawable/shape_grayline_whitefill5"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginRight="10dp"
                android:src="@mipmap/back_gis" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_show"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/shape_grayline_whitefill5"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginRight="10dp"
                android:src="@mipmap/search" />

        </LinearLayout>


    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        >
    </View>


    <LinearLayout
        android:id="@+id/ll_search"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:layout_gravity="right"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:background="@drawable/shape_grayline_whitefill5"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">


        <EditText
            android:id="@+id/et_search"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:hint="搜索条件 模糊搜索"
            android:imeOptions="actionSearch"
            android:lines="1"
            android:singleLine="true"
            android:textColorHint="@color/grayText"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/iv_search"
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:src="@mipmap/search" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_condition"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:visibility="gone"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_street"
            android:layout_width="0dp"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@drawable/shape_grayline_whitefill5"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_street"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:ellipsize="end"
                android:gravity="center"
                android:lines="1"
                android:maxLength="4"
                android:layout_weight="1"
                android:text="所属街道"
                android:layout_marginLeft="2dp"
                android:textColor="@color/grayText"
                android:textSize="14sp" />

            <ImageView
                android:layout_width="15dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="2dp"
                android:src="@mipmap/arrow_gray_down" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_year"
            android:layout_width="0dp"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:background="@drawable/shape_grayline_whitefill5"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_year"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center"
                android:lines="1"
                android:layout_weight="1"
                android:layout_marginLeft="2dp"
                android:text="水体分类"
                android:textColor="@color/grayText"
                android:textSize="14sp" />

            <ImageView
                android:layout_width="15dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="2dp"
                android:src="@mipmap/arrow_gray_down" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_type"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:gravity="center"
            android:background="@drawable/shape_grayline_whitefill5"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center"
                android:lines="1"
                android:layout_weight="1"
                android:text="管理等级"
                android:layout_marginLeft="2dp"
                android:textColor="@color/grayText"
                android:textSize="14sp" />

            <ImageView
                android:layout_width="15dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="2dp"
                android:src="@mipmap/arrow_gray_down" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_tran_situation"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:paddingTop="6dp"
            android:gravity="center"
            android:paddingBottom="6dp"
            android:background="@drawable/shape_grayline_whitefill5"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_tran_situation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="1"
                android:text="整治情况"
                android:gravity="center"
                android:layout_marginLeft="2dp"
                android:layout_weight="1"
                android:textColor="@color/grayText"
                android:textSize="14sp" />

            <ImageView
                android:layout_width="15dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="2dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@mipmap/arrow_gray_down" />

        </LinearLayout>

    </LinearLayout>
</LinearLayout>





