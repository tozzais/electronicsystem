<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        style="@style/horizontal_space"/>
    <LinearLayout
        android:id="@+id/ll_root"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_town_name"
            android:textSize="18sp"
            android:textColor="@color/title_textcolor"
            android:textStyle="bold"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:text="@string/item_statistical_town_name"
            />

        <TextView
            android:textSize="14sp"
            android:paddingRight="12dp"
            android:textColor="@color/grayText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/item_statistical_water_times"
            />
        <TextView
            android:id="@+id/tv_total"
            android:textSize="18sp"
            android:textStyle="bold"
            android:paddingRight="12dp"
            android:textColor="@color/title_textcolor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1064"
            />
        <TextView
            android:textSize="14sp"
            android:paddingRight="12dp"
            android:textColor="@color/grayText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/item_statistical_channel_times"
            />
        <TextView
            android:id="@+id/tv_river_total"
            android:textSize="18sp"
            android:textStyle="bold"
            android:paddingRight="12dp"
            android:textColor="@color/title_textcolor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1064"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_room_count"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/baseColor"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:paddingLeft="12dp"
                android:gravity="center"
                android:text="300"
                />

            <TextView
                android:textSize="14sp"
                android:textColor="@color/grayText"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:paddingLeft="12dp"
                android:gravity="center"
                android:text="@string/item_statistical_city_channel"
                />

        </LinearLayout>
        <View
            style="@style/line_vertical"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_home_count"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/baseColor"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:paddingLeft="12dp"
                android:gravity="center"
                android:text="382"
                />

            <TextView
                android:textSize="14sp"
                android:textColor="@color/grayText"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:paddingLeft="12dp"
                android:gravity="center"
                android:text="@string/item_statistical_area_channel"
                />

        </LinearLayout>
        <View
            style="@style/line_vertical"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_water_count"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/baseColor"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:paddingLeft="12dp"
                android:gravity="center"
                android:text="230"
                />

            <TextView
                android:textSize="14sp"
                android:textColor="@color/grayText"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:paddingLeft="12dp"
                android:gravity="center"
                android:text="@string/item_statistical_town_channel"
                />

        </LinearLayout>

        <View
            style="@style/line_vertical"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_water_coun2"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/baseColor"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:paddingLeft="12dp"
                android:gravity="center"
                android:text="230"
                />

            <TextView
                android:textSize="14sp"
                android:textColor="@color/grayText"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:paddingLeft="12dp"
                android:gravity="center"
                android:text="@string/item_statistical_village_channel"
                />

        </LinearLayout>



    </LinearLayout>
    </LinearLayout>


    <RelativeLayout
        android:id="@+id/ll_more"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/more_bg"
        android:orientation="vertical"
        android:paddingBottom="5dp">

        <com.gaocheng.baselibrary.widget.chart.SingleCakeView
            android:id="@+id/cakeView"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_gravity="center">

        </com.gaocheng.baselibrary.widget.chart.SingleCakeView>


        <com.github.mikephil.charting.charts.BarChart
            android:id="@+id/chart"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_below="@+id/cakeView"
            android:layout_marginTop="-10dp"
            />





    </RelativeLayout>








</LinearLayout>
