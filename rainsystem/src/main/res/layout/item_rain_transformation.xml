<?xml version="1.0" encoding="utf-8"?>



<com.gaocheng.baselibrary.widget.SwipeItemLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scroll_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/main"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <View
                style="@style/horizontal_space"/>
            <include layout="@layout/item_rain_transformation_main"/>

            <View style="@style/line" />


            <LinearLayout
                android:id="@+id/ll_more"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/more_bg"
                android:orientation="vertical"
                android:paddingTop="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_draingo"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:layout_weight="1"
                        tools:text="污水去向："
                        android:textColor="@color/grayText"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_drainreturn"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        tools:text="雨(污)水去向"
                        android:textColor="@color/grayText"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_starttime"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:layout_weight="1"
                        android:text="开工时间："
                        android:textColor="@color/grayText"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_fintime"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="计划完工时间：2019-05-01"
                        android:textColor="@color/grayText"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_gzcontent"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:layout_weight="1"
                        android:text="改造内容："
                        android:textColor="@color/grayText"
                        android:textSize="14sp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_content"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="评价:良好良好良好良好良好良好良好良好良好良好良好"
                            android:textColor="@color/grayText"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/tv_look_pic"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:background="@drawable/shape_line_green5"
                            android:drawablePadding="5dp"
                            android:drawableRight="@mipmap/arrow_green_right"
                            android:padding="3dp"
                            android:text="施工单位"
                            android:layout_marginRight="5dp"
                            android:textColor="@color/baseColor"
                            android:textSize="14sp" />

                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_note"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:text="改造备注：备注备注备注备注备注备注备注备注"
                    android:textColor="@color/grayText"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_case"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:text="现场情况：现场情况现场情况现场情况现场情况"
                    android:textColor="@color/grayText"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_advisenote"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:ellipsize="end"
                    android:lines="1"
                    android:text="意见建议：意见建议意见建议意见建议意见建议意见建议意见建议"
                    android:textColor="@color/grayText"
                    android:layout_marginBottom="5dp"
                    android:textSize="14sp" />


               <com.gaocheng.baselibrary.widget.MyGridView
                   android:id="@+id/gridview"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:verticalSpacing="4dp"
                   android:horizontalSpacing="5dp"
                   android:layout_marginLeft="10dp"
                   android:layout_marginRight="10dp"
                   android:layout_marginBottom="5dp"
                   android:numColumns="5">

               </com.gaocheng.baselibrary.widget.MyGridView>




            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <View
                style="@style/horizontal_space"/>

        <TextView
            android:id="@+id/delete"
            android:text="信息更新"
            android:gravity="center"
            android:textColor="#ffffff"
            android:textSize="14sp"
            android:background="@color/baseColor"
            android:layout_width="80dp"
            android:layout_height="match_parent" />

        </LinearLayout>



    </com.gaocheng.baselibrary.widget.SwipeItemLayout>


