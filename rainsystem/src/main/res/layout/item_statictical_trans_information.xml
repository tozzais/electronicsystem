<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">
    <View
        style="@style/horizontal_space"/>
    <LinearLayout
        android:id="@+id/ll_root"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_town_name"
                android:textSize="18sp"
                android:textColor="@color/title_textcolor"
                android:textStyle="bold"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:paddingLeft="16dp"
                tools:text="七宝镇"
                />

            <TextView
                android:textSize="16sp"
                android:paddingRight="12dp"
                android:textColor="@color/grayText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="小区总数"
                />
            <TextView
                android:id="@+id/tv_total"
                android:textSize="18sp"
                android:textStyle="bold"
                android:paddingRight="12dp"
                android:textColor="@color/title_textcolor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="1064"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_title_transing"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/chart_yellow_light"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:paddingLeft="12dp"
                    android:gravity="center"
                    tools:text="300"
                    />

                <TextView
                    android:textSize="14sp"
                    android:textColor="@color/grayText"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:paddingLeft="12dp"
                    android:gravity="center"
                    android:text="正在改造"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_title_finish"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/chart_green"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:paddingLeft="12dp"
                    android:gravity="center"
                    tools:text="382"
                    />

                <TextView
                    android:textSize="14sp"
                    android:textColor="@color/grayText"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:paddingLeft="12dp"
                    android:gravity="center"
                    android:text="完成改造"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_title_plan"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/chart_red"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:paddingLeft="12dp"
                    android:gravity="center"
                    tools:text="230"
                    />

                <TextView
                    android:textSize="14sp"
                    android:textColor="@color/grayText"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:paddingLeft="12dp"
                    android:gravity="center"
                    android:text="计划改造"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_title_no"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/chart_blue"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:paddingLeft="12dp"
                    android:gravity="center"
                    tools:text="230"
                    />

                <TextView
                    android:textSize="14sp"
                    android:textColor="@color/grayText"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:paddingLeft="12dp"
                    android:gravity="center"
                    android:text="无需改造"
                    />

            </LinearLayout>



        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_more"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/more_bg"
        android:orientation="vertical">
        <com.gaocheng.baselibrary.widget.chart.DoubleCakeView
            android:id="@+id/cakeView"
            android:layout_margin="8dp"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_gravity="center">

        </com.gaocheng.baselibrary.widget.chart.DoubleCakeView>

        <View
            style="@style/line"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_no_mixing"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="12dp"
                    android:gravity="center"
                    tools:text="300"
                    />

                <TextView
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:paddingLeft="12dp"
                    android:gravity="center"
                    android:text="不存在混接"
                    />

            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_no_mixing_finish"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/chart_green"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:paddingLeft="12dp"
                    android:gravity="center"
                    tools:text="382"
                    />

                <TextView
                    android:textSize="14sp"
                    android:textColor="@color/grayText"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:paddingLeft="12dp"
                    android:gravity="center"
                    android:text="完成改造"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_no_mixing_no"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/chart_blue"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:paddingLeft="12dp"
                    android:gravity="center"
                    tools:text="230"
                    />

                <TextView
                    android:textSize="14sp"
                    android:textColor="@color/grayText"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:paddingLeft="12dp"
                    android:gravity="center"
                    android:text="无需改造"
                    />

            </LinearLayout>





        </LinearLayout>
        <View
            style="@style/line"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_hava_mixing"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:paddingLeft="12dp"
                    android:gravity="center"
                    tools:text="300"
                    />

                <TextView
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:paddingLeft="12dp"
                    android:gravity="center"
                    android:text="存在混接"
                    />

            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_hava_mixing_traning"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/chart_yellow_light"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:paddingLeft="12dp"
                    android:gravity="center"
                    tools:text="300"
                    />

                <TextView
                    android:textSize="14sp"
                    android:textColor="@color/grayText"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:paddingLeft="12dp"
                    android:gravity="center"
                    android:text="正在改造"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_hava_mixing_plan"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/chart_red"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:paddingLeft="12dp"
                    android:gravity="center"
                    tools:text="230"
                    />

                <TextView
                    android:textSize="14sp"
                    android:textColor="@color/grayText"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:paddingLeft="12dp"
                    android:gravity="center"
                    android:text="计划改造"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_hava_mixing_no"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/chart_gray"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:paddingLeft="12dp"
                    android:gravity="center"
                    tools:text="230"
                    />

                <TextView
                    android:textSize="14sp"
                    android:textColor="@color/grayText"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:paddingLeft="12dp"
                    android:gravity="center"
                    android:text="未计划"
                    />

            </LinearLayout>



        </LinearLayout>

    </LinearLayout>













</LinearLayout>
