<?xml version="1.0" encoding="utf-8"?>


<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/white"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        android:orientation="vertical">




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_draingo"
                android:textSize="14sp"
                android:textColor="@color/black_shadow"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginLeft="12dp"
                android:layout_height="wrap_content"
                android:text="污水去向:"
                />
            <TextView
                android:id="@+id/tv_drainreturn"
                android:textSize="14sp"
                android:textColor="@color/black_shadow"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="雨(污)水去向:"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_starttime"
                android:textSize="14sp"
                android:textColor="@color/black_shadow"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginLeft="12dp"
                android:layout_height="wrap_content"
                android:text="开工时间:"
                />
            <TextView
                android:id="@+id/tv_fintime"
                android:textSize="14sp"
                android:textColor="@color/black_shadow"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="计划完工时间:"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_trans_sutiation"
                android:textSize="14sp"
                android:textColor="@color/black_shadow"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginLeft="12dp"
                android:layout_height="wrap_content"
                android:text="改造情况:"
                />

                <TextView
                    android:id="@+id/tv_trans_subject"
                    android:textSize="14sp"
                    android:textColor="@color/black_shadow"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="改造主体:"
                    />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_gzcontent"
                android:textSize="14sp"
                android:textColor="@color/black_shadow"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginLeft="12dp"
                android:layout_height="wrap_content"
                android:text="改造内容："
                />

                <TextView
                    android:id="@+id/tv_content"
                    android:textSize="14sp"
                    android:textColor="@color/black_shadow"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="评价:"
                    />


        </LinearLayout>

        <TextView
            android:id="@+id/tv_note"
            android:textSize="14sp"
            android:textColor="@color/black_shadow"
            android:layout_width="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_height="wrap_content"
            android:text="改造备注:"
            />
        <TextView
            android:id="@+id/tv_case"
            android:textSize="14sp"
            android:textColor="@color/black_shadow"
            android:layout_width="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_height="wrap_content"
            android:text="现场情况:"
            />
        <TextView
            android:id="@+id/tv_advisenote"
            android:textSize="14sp"
            android:textColor="@color/black_shadow"
            android:layout_width="wrap_content"
            android:layout_marginLeft="12dp"
            android:lines="1"
            android:ellipsize="end"
            android:layout_height="wrap_content"
            android:text="意见建议:"
            />



        <com.gaocheng.baselibrary.widget.MyGridView
            android:id="@+id/gridview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:verticalSpacing="4dp"
            android:horizontalSpacing="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:numColumns="5">

        </com.gaocheng.baselibrary.widget.MyGridView>



    </LinearLayout>


</ScrollView>


